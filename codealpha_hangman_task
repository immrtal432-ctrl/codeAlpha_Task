import random

def play_hangman():
    words = ["python", "alpha", "intern", "simple", "project"]
    word = random.choice(words)
    used_letters = set()
    attempts = 6

    print("=== Hangman Game ===")

    while attempts > 0:
        display = ""
        missing = 0

        for ch in word:
            if ch in used_letters:
                display += ch + " "
            else:
                display += "_ "
                missing += 1

        print("\nWord:", display.strip())
        print("Used letters:", " ".join(sorted(used_letters)))
        print("Attempts left:", attempts)

        # Win condition
        if missing == 0:
            print("You won! Word is:", word)
            return

        guess = input("Enter a single letter: ").lower()

        # --- Input validation ---
        if len(guess) != 1 or not guess.isalpha():
            print("Please enter only ONE alphabet!")
            continue

        if guess in used_letters:
            print("You already tried this letter!")
            continue

        used_letters.add(guess)

        if guess in word:
            print("Correct!")
        else:
            attempts -= 1
            print("Wrong guess!")

    print("Game Over! Word was:", word)

play_hangman()
